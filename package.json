{
  "name": "workspace",
  "version": "1.0.0",
  "description": "ui common library",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "storybook dev -p 6007 --no-open",
    "prettier:check": "prettier --check \"**/*.{js,ts,tsx,css,json,md}\"",
    "prettier:write": "prettier --write \"**/*.{js,ts,tsx,css,json,md}\"",
    "prettier:sass:check": "prettier --check \"**/*.scss\"",
    "prettier:sass:write": "prettier --write \"**/*.scss\"",
    "prettier:ci": "npm run prettier:check && npm run prettier:sass:check",
    "build": "npm run prettier:ci && storybook build"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{scss,css,json,md}": [
      "prettier --write"
    ]
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@storybook/addon-a11y": "^9.0.5",
    "@storybook/addon-docs": "^9.0.5",
    "@storybook/addon-onboarding": "^9.0.5",
    "@storybook/addon-vitest": "^9.0.5",
    "@storybook/nextjs": "^9.0.5",
    "@storybook/nextjs-vite": "^9.0.5",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitest/browser": "^3.2.2",
    "@vitest/coverage-v8": "^3.2.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "sass": "^1.89.1",
    "storybook": "^9.0.5",
    "stylelint": "^16.20.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-scss": "^6.12.0",
    "typed-scss-modules": "^8.1.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.2"
  }
}
