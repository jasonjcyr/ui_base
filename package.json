{
  "name": "@reactnextjsguru/talon-ui",
  "version": "1.10.1",
  "description": "ui common library",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./AutoFitText": {
      "import": "./dist/AutoFitText/index.js",
      "types": "./dist/AutoFitText.d.ts"
    },
    "./Button": {
      "import": "./dist/Button/index.js",
      "types": "./dist/Button.d.ts"
    },
    "./Typography": {
      "import": "./dist/Typography/index.js",
      "types": "./dist/Typography.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "start": "storybook dev -p 6007 --no-open",
    "prettier:check": "prettier --check \"**/*.{js,ts,tsx,css,json,md}\"",
    "prettier:write": "prettier --write \"**/*.{js,ts,tsx,css,json,md}\"",
    "prettier:sass:check": "prettier --check \"**/*.scss\"",
    "prettier:sass:write": "prettier --write \"**/*.scss\"",
    "prettier:ci": "npm run prettier:check && npm run prettier:sass:check",
    "lint": "eslint . --max-warnings=0 --format=stylish",
    "prepare": "chmod +x .husky/pre-commit",
    "build-dev": " ANALYZE=true vite build",
    "build": "npm run prettier:ci && vite build",
    "postbuild": "node scripts/generate-exports.js",
    "build-storybook": "storybook build -o storybook-static",
    "test": "jest --coverage"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0 --no-warn-ignored --format=stylish"
    ],
    "*.{scss,css,json,md,yml,yaml}": [
      "prettier --check"
    ]
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@jest/globals": "^30.0.2",
    "@storybook/addon-a11y": "^9.0.9",
    "@storybook/addon-designs": "^10.0.1",
    "@storybook/addon-docs": "^9.0.9",
    "@storybook/addon-onboarding": "^9.0.9",
    "@storybook/addon-vitest": "^9.0.9",
    "@storybook/addons": "^7.6.17",
    "@storybook/nextjs": "^9.0.9",
    "@storybook/nextjs-vite": "^9.0.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.15.32",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@types/rollup-plugin-postcss": "^3.1.4",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/browser": "^3.2.2",
    "@vitest/coverage-v8": "^3.2.2",
    "@vituum/vite-plugin-postcss": "^1.1.0",
    "autoprefixer": "^10.4.17",
    "cssnano": "^7.0.7",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "lint-staged": "^16.1.0",
    "playwright": "^1.52.0",
    "postcss": "^8.5.6",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^10.2.4",
    "prettier": "^3.5.3",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.89.1",
    "storybook": "^9.0.9",
    "stylelint": "^16.20.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-scss": "^6.12.0",
    "ts-jest": "^29.4.0",
    "typed-scss-modules": "^8.1.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-externalize-deps": "^0.9.0",
    "vitest": "^3.2.2"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lucide-react": "^0.522.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  }
}
